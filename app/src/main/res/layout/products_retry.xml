<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/products_retry"
              style="@style/AppTheme.Products.Retry"
  >


  <TextView
    android:id="@+id/products_retry_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/products_retry_msg"
    style="@style/AppTheme.Products.Retry.Msg"
    />

  <Button
    android:id="@+id/products_retry_button"
    android:text="@string/products_retry_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Products.Retry.Button"
    />

</LinearLayout>